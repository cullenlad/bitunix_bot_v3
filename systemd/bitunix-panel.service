[Unit]
Description=BitUnix Grid Web Panel
After=network-online.target
Wants=network-online.target
[Service]
User=ianms
WorkingDirectory=/home/ianms/bitunix-bot
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/ianms/bitunix-bot/.venv/bin/python /home/ianms/bitunix-bot/app.py
Restart=always
RestartSec=3
[Install]
WantedBy=multi-user.target
